collection `Users`:
{
 "id": String,
 "email": String,
 "password": String,
 "phoneNumber": Number,
 "address": String,
 "firstName": String,
 "lastName": String,
 "cards": Array of objects || strings?,
 "orderedProducts": [
   {
     "id": String,
     "isDelivered": Boolean
   },
   ...
 ],

"productsInCart": Array of strings
}

 
