Bank db

user{
  '_id'      : ObjectId
  'firstName': String,
  'lastName' : String,
  'eMail'    : String,
  'password' : String,
  'cards'    : [
    {
      'number' : Number,
      'pin'    : Number,
      'cvv'    : Number,
      'balance': Number,
      'owner'  : ObjectId
    }
  ]
}



transaction{
  '_id'    : ObjectId,
  'from'   : ObjectId,
  'to'     : ObjectId,
  'amount' : Number
  'when'   : Date
}

